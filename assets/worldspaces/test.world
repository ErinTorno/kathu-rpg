world-id: test-world
name:     test world
initial-palette: night
palettes:
  night:
    background: "#151220"
    shader:
      fn: shift-hue-towards
      angle: 250
      percent: 0.35
  volcanic:
    background: "#47222c"
    shader:
      fn: shift-hue
      angle: 45.0
  night-forest:
    background: "#121a20"
    shader:
    - fn: shift-hue-towards
      angle: 140
      percent: 0.3
    - fn: desaturate-by
      percent: 0.3
  night-to-night-forest:
    cycle-duration: 3000
    frames-per-second: 15
    cycle-end-behavior: change-to night-forest
    keyframes:
      0:
        background: "#151220"
        shader: {fn: shift-hue-towards, angle: 250, percent: 0.35}
      3000:
        background: "#121a20"
        shader: [{fn: shift-hue-towards, angle: 140, percent: 0.3}, {fn: desaturate-by, percent: 0.3}]
  limited:
    background: "#000000"
    shader:
      fn: match-nearest
      color-set: ["#ffffff", "#fb3e6c", "#41c955", "#4176c9"]
  poisoned:
    cycle-duration: 1500
    frames-per-second: 15
    keyframes:
      0:
        background: "#1d0827"
        shader: {fn: shift-hue-towards, angle: 280, percent: 0.35}
      1500:
        background: "#250f2ef2"
        shader: {fn: shift-hue-towards, angle: 280, percent: 0.75}
  rainbow:
    cycle-duration: 6000
    frames-per-second: 15
    cycle-end-behavior: restart
    interpolate-fn: angular
    keyframes:
      0:
        background: "#3b1822"
        shader: {fn: shift-hue, angle: 45.0}
      2000:
        background: "#161f36"
        shader: {fn: shift-hue, angle: 165.0}
      4000:
        background: "#11240a"
        shader: {fn: shift-hue, angle: 285.0}
      6000:
        background: "#3b1822"
        shader: {fn: shift-hue, angle: 45.0}
      
