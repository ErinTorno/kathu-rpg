- "#         #  , ,,,   ,%        %"
- "#         #  ,,,,,,  ,%        %"
- "#         #  , ,,,   ,%        %"
- "#         #  ,,,,,,  ,%        %"
- "#  #####  # ,,, , ,   %%%    %%%"
variables:
