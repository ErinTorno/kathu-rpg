game-icon: "/icon-large.png"
health-bar:
  starts-at:        [5, 10]
  points-per-part:  20
  primary-width:    10 # size plus 1 pixel for space
  secondary-width:  8
  primary-full:     heart-large-4q.png
  primary-3q:       heart-large-3q.png
  primary-half:     heart-large-2q.png
  primary-1q:       heart-large-1q.png
  secondary-full:   heart-small-4q.png
  secondary-empty:  heart-small-0q.png
mana-bar:
  starts-at:        [5, 15]
  points-per-part:  20
  # for mana, the primary and secondary are same so that it looks like one continuous bar
  cap-width:        2 # two pixels for the cap
  cap-beginning:    mana-cap-beginning.png
  cap-ending:       mana-cap-ending.png
  primary-width:    7
  secondary-width:  7
  primary-full:     mana-4q.png
  primary-3q:       mana-3q.png
  primary-half:     mana-2q.png
  primary-1q:       mana-1q.png
  secondary-full:   mana-4q.png
  secondary-empty:  mana-0q.png
