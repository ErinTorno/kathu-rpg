# this component can be shortened to "identity: myID" for entities without names or descriptions visible
identity:
  id: player
  name: jupiter
  description: this should never appear
# This follows an Entity Component System. Everything component is optional, with only an ID part of an identity being required for config file entities
tags: [player]
life-time: persistant # we never let this entity get destroyed automatically
 # how many tiles you can cover per second
moving-speed: 10
physics:
  type:       dynamic
  mass:       10
  friction:   0
  elasticity: 0
  shapes:
  - {category: movement,   shape: rectangle, bounds: [0.5, 0.25], origin: [-0.25, -0.25]}
  - {category: hitbox,     shape: circle,    radius: 0.15,        origin: [0, -0.5]}
  - {category: interactor, shape: circle,    radius: 0.75,        origin: [0, -0.3]}
# - {shape: rectangle, bounds: [1, 1],   origin: [0.5, 0.75]}
sprite:
  atlas:  player.png
  bounds: [23, 32] # kind of irregular
  animations: # the order matters right now for non-lua scripted walking
    walk-north:     {row: 0, frames: 4, delay: 250} # in ms
    walk-northeast: {row: 1, frames: 4, delay: 250}
    walk-east:      {row: 2, frames: 4, delay: 250}
    walk-southeast: {row: 3, frames: 4, delay: 250}
    walk-south:     {row: 4, frames: 4, delay: 250}
    walk-southwest: {row: 5, frames: 4, delay: 250}
    walk-west:      {row: 6, frames: 4, delay: 250}
    walk-northwest: {row: 7, frames: 4, delay: 250}
actor-state:
  team:    ally
  health:  60.0 # 3 hearts at start
  mana:    60.0
  armor:   0.0
  aura:    0.0
  resists: {}
inventory:
  type: container
  equip-slots: []
  misc-slots:
  - {count: 30}