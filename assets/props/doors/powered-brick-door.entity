identity:
  id: powered-brick-door
tags: [door]
script:
  file:   "powered-door.lua"
  is-singleton: true
  events: [on-signal-change]
render:
- atlas:  "powered-brick-door.png"
  layer:  -1
  bounds: [34, 48]
  strips:
  - {id: closed, frames: 1, row: 0, delay: 1000}
  - {id: open,   frames: 1, row: 1, delay: 1000}
body-config:
  type:   static
  shapes:
  - category: movement
    shape:    rectangle
    bounds:   [2.0, 1.0]