identity: button-huge
script:
  file:   button-partial-press.lua
  events:
  - on-sensor-collision-begin
  - on-sensor-collision-end
sprite:
  atlas:  button-huge.png
  layer:  -1
  bounds: [32, 34]
  animations:
    unpressed: {row: 0, frames: 1, delay: 1000}
    partial:   {row: 1, frames: 1, delay: 1000}
    pressed:   {row: 2, frames: 1, delay: 1000}
physics:
  type:   static
  shapes:
  - category: movement-sensor
    shape:    rectangle
    bounds:   [1.6, 1.6]
    origin:   [-0.8, -2]