identity: orb-toggle
script:
  file:   "orb-toggle.lua"
  events: [on-init]
  is-singleton: true
render:
- atlas: "orb-toggle.png"
  bounds: [16, 16]
  strips:
  - {id: cold, frames: 1, row: 0, delay: 1000}
  - {id: warm, frames: 1, row: 1, delay: 1000}
physics:
  type:   static
  shapes:
  - category: movement
    shape:    rectangle
    bounds:   [1.0, 0.25]
    origin:   [-0.5, -0.25]