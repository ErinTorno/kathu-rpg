  events: [on-init]
  is-singleton: true
sprite:
  atlas: orb-toggle.png
  bounds: [16, 16]
  animations:
    cold: {row: 0, frames: 1, delay: 1000}
    warm: {row: 1, frames: 1, delay: 1000}
physics:
  type:   static
  shapes:
  - category: movement
    shape:    rectangle
    bounds:   [1.0, 0.25]
    origin:   [-0.5, -0.25]