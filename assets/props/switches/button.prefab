identity: button
script:
  file:   button.lua
  events:
  - on-sensor-collision-begin
  - on-sensor-collision-end
sprite:
  atlas:  button.png
  layer:  -1
  bounds: [16, 18]
  animations:
    unpressed: {row: 0, frames: 1, delay: 1000}
    pressed:   {row: 1, frames: 1, delay: 1000}
physics:
  type:   static
  shapes:
  - category: movement-sensor
    shape:    rectangle
    bounds:   [0.85, 0.85]
    origin:   [-0.425, -1]